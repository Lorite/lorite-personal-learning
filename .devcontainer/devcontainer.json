{
	"name": "Lorite Container (Bazel community + VS Code Addons)",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"BAZELISK_VERSION": "v1.10.1",
			"BAZELISK_DOWNLOAD_SHA": "4cb534c52cdd47a6223d4596d530e7c9c785438ab3b0a49ff347e991c210b2cd"
		}
	},

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"forevolve.git-extensions-for-vs-code",
				"ms-azuretools.vscode-docker",
				"eamodio.gitlens",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-vscode.cpptools",
				"twxs.cmake",
				"DotJoshJohnson.xml",
				"docsmsft.docs-yaml",
				"mutantdino.resourcemonitor",
				"lextudio.restructuredtext",
				"foxundermoon.shell-format",
				"timonwong.shellcheck",
				"dtangren.vs-codeowners",
				"llvm-vs-code-extensions.vscode-clangd",
				"docsmsft.docs-markdown",
				"humao.rest-client",
				"trond-snekvik.simple-rst",
				"heptio.jsonnet",
				"redhat.ansible",
				"xrc-inc.jsonnet-formatter",
				"zxh404.vscode-proto3",
				"bazelbuild.vscode-bazel",
				"ryanluker.vscode-coverage-gutters",
				"cschlosser.doxdocgen",
				"sonarsource.sonarlint-vscode",
				"Huuums.vscode-fast-folder-structure",
				"vadimcn.vscode-lldb",
				"streetsidesoftware.code-spell-checker",
				"rust-lang.rust-analyzer",
				"huibizhang.codesnap-plus",
				"wmaurer.change-case",
				"Guyutongxue.cpp-reference",
				"GitHub.copilot",
				"GitHub.vscode-pull-request-github",
				"golang.go",
				"ms-vsliveshare.vsliveshare",
				"shd101wyy.markdown-preview-enhanced",
				"analytic-signal.preview-mp4",
				"avaly.restore-git-branch-tabs-improved",
				"yy0931.save-as-root",
				"valsorym.smart-tabs",
				"awtnb.spotline",
				"shyykoserhiy.vscode-spotify",
				"patricklee.vsnotes",
				"WakaTime.vscode-wakatime",
				"redhat.vscode-yaml",
				"tomoki1207.pdf",
				"GitHub.copilot-chat"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",
	// Uncomment when using a ptrace-based debugger like C++, Go, and Rust
	// "runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	// Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "lorite",
    "containerUser": "lorite"
}
