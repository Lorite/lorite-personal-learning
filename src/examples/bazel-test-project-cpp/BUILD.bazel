package(default_visibility = ["//visibility:private"])

cc_library(
    name = "hello-lib",
    srcs = ["hello-lib.cc"],
    hdrs = ["hello-lib.h"],
    includes = [""],
)

cc_binary(
    name = "hello-world",
    srcs = ["hello-world.cc"],
    deps = [":hello-lib"],
)

filegroup(
    name = "srcs",
    srcs = glob(["**"]),
)

cc_test(
  name = "test_hello-lib",
  size = "small",
  srcs = ["hello-test.cc"],
  deps = ["@com_google_googletest//:gtest_main"],
)